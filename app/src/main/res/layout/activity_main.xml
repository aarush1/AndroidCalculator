<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result_tv"
        android:layout_marginBottom="1dp"
        android:background="@color/black"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="100dp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:background="@color/black"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="102dp"></TextView>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         android:id="@+id/buttons_layout"
         android:layout_alignParentBottom="true"
         android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_c"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="C"
            android:textColor="@color/black"
            app:backgroundTint="#C6C4C4"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_close_bracket"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="("
            app:backgroundTint="#C6C4C4"
            android:textColor="@color/black"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/button_open_bracket"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text=")"
             app:backgroundTint="#C6C4C4"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/white"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:backgroundTint="#FF9500"
                app:cornerRadius="36dp" />


     </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="horizontal">

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_7"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 app:backgroundTint="#505050"

                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 android:text="7"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 app:cornerRadius="36dp" />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_8"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 app:backgroundTint="#505050"
                 android:text="8"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 app:cornerRadius="36dp" />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_9"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 app:backgroundTint="#505050"
                 android:layout_margin="12dp"
                 android:text="9"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 app:cornerRadius="36dp" />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_multiply"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 android:text="*"
                 android:textColor="@color/white"
                 app:backgroundTint="#FF9500"
                 android:textSize="32dp"
                 android:backgroundTint="@color/white"
                 app:cornerRadius="36dp" />


         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="horizontal">

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_4"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 app:backgroundTint="#505050"
                 android:text="4"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 app:cornerRadius="36dp" />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_5"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 android:text="5"
                 app:backgroundTint="#505050"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 app:cornerRadius="36dp" />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_6"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 app:backgroundTint="#505050"
                 android:text="6"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 app:cornerRadius="36dp" />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_plus"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 android:text="+"
                 android:textColor="@color/white"
                 app:backgroundTint="#FF9500"
                 android:textSize="32dp"
                 android:backgroundTint="@color/white"
                 app:cornerRadius="36dp" />


         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="horizontal">

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_1"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 android:text="1"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 app:backgroundTint="#505050"
                 app:cornerRadius="36dp" />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_2"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 android:text="2"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 app:cornerRadius="36dp"
                 app:backgroundTint="#505050"
                 />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_3"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 app:backgroundTint="#505050"
                 android:text="3"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 app:cornerRadius="36dp" />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_minus"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 android:text="-"
                 android:textColor="@color/white"
                 app:backgroundTint="#FF9500"
                 android:textSize="32dp"
                 android:backgroundTint="@color/white"
                 app:cornerRadius="36dp" />


         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="horizontal">

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_ac"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 android:text="AC"
                 android:textColor="@color/white"
                 app:backgroundTint="#505050"
                 android:textSize="32dp"
                 app:cornerRadius="36dp" />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_0"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 android:text="0"
                 app:backgroundTint="#505050"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 app:cornerRadius="36dp" />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_dot"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 android:text="."
                 app:backgroundTint="#505050"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 app:cornerRadius="36dp" />

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_equals"
                 style="@style/Widget.Design.FloatingActionButton"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="12dp"
                 android:text="="
                 android:textColor="@color/white"
                 app:backgroundTint="#FF9500"
                 android:textSize="32dp"
                 app:cornerRadius="36dp" />


         </LinearLayout>







     </LinearLayout>

</RelativeLayout>